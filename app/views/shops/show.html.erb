<p id="notice"><%= notice %></p>

<p>
  <strong>Name of the shop:</strong>
  <%= @shop.name %>
</p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Data utworzenia</th>
      <th>Price</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= product.price %></td>
        <td><%= product.id %></td>
        <td><%= link_to 'Zobacz', shop_product_path(@shop.id, product.id) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user %>
    <%= link_to 'Dodaj nowy produkt', new_shop_product_path(@shop) %>
<% else %>
    <h5>Zaloguj się jak chcesz dodać produkt</h5>
    <%= render '../login' %>
<% end %>



<%= link_to 'Back', shops_path %>