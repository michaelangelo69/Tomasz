<p id="notice"><%= notice %></p>

<p>
  <strong>Name of the shop:</strong>
  <%= @shop.name %>
</p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.first_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user %>

<%= link_to 'Test', new_shop_product_path(@shop) %>

<% else %>
    <h5>Zaloguj się jak chcesz dodać produkt</h5>
    <%= render 'login' %>
<% end %>



<%= link_to 'Back', users_path %>